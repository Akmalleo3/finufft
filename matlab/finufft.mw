@function [fk ier] = finufft1d1(x,c,isign,tol,o)
% FINUFFT1D1
%
% [F ier] = finufft1d1(x,c,isign,tol,opts)
%
%
% opts.nthreads = 0 leaves the default number of threads.
%
%
% doc to do...

if nargin<5, o=[]; end
if ~isfield(o,'debug'), o.debug = 0; end
if ~isfield(o,'nthreads'), o.nthreads = 0; end

debug = o.debug;
nthreads = o.nthreads;
nj=numel(x);
if numel(c)~=nj, error('c must have the same number of elements as x'); end

